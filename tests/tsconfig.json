{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "incremental": true,
        "target": "esnext",
        "module": "esnext",
        "declaration": true,
        "sourceMap": true,
        "composite": true,
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"],
        "paths": {
            "@framework-tools/catchit": ["./../src/index.ts"],
            "@framework-tools/catchit/*": ["./../src/*"]
        }
    },
    "references": [
        { "path": "../"}
    ],
    "exclude": [
        "**/dist"
    ]
}