{
    "compilerOptions": {
        "incremental": true,
        "target": "esnext",
        "module": "esnext",
        "declaration": true,
        "sourceMap": true,
        "composite": true,
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"]
    },
    "exclude": [
        "**/dist"
    ]
}